{
  "npm.packageManager": "pnpm",
  "editor.formatOnSave": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "eslint.validate": ["javascript", "typescript", "svelte"],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.tabSize": 2,
}
